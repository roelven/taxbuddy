{
	"config_version": "2",
	"platform_version": "v1.3",
	"name": "taxbuddy",
	"author": "hello@roelvanderven.com",
	"version": "0.2",
	"description": "My Extension Description",
	"modules": {
		"activations": [
			{
				"patterns": ["http://*/*", "https://*/*"],
				"styles": [],
				"scripts": ["js/every-page.js"],
				"run_at": "start",
				"all_frames": false
			}
		],
		"background": {
			"files": ["js/background.js"]
		},
		"button": {
			"default_title": "Taxbuddy",
			"default_popup": "index.html",
			"default_icon": "img/logo-forge.png"
		},
		"contact": true,
		"event": true,
		"file": true,
		"geolocation": true,
		"is": true,
		"logging": {
			"level": "INFO"
		},
		"message": true,
		"notification": true,
		"prefs": true,
		"request": {
			"permissions": []
		},
		"sms": false,
		"tabs": true,
		"tools": true
	}
}
